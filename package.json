{
  "name": "nuxt-app",
  "private": true,
  "license": "AGPL-3.0-or-later",
  "scripts": {
    "build": "nuxt build",
    "check": "npm run format && npm run lint && npm run tsc && npm run vue-tsc",
    "cm": "cz",
    "coverage": "vitest run --coverage",
    "dev": "nuxt dev",
    "format": "prettier --write --ignore-unknown .",
    "formatcheck": "prettier --check --ignore-unknown .",
    "generate": "nuxt generate",
    "lint": "eslint --fix --ext .js,.ts,.vue .",
    "postinstall": "nuxt prepare",
    "precommit": "npm run formatcheck && npm run lint && npm run tsc && npm run vue-tsc && npm run test && nuxt build pcdist",
    "prepare": "husky install",
    "preview": "nuxt preview",
    "tsc": "tsc --noEmit",
    "test": "vitest run",
    "testw": "vitest watch",
    "vue-tsc": "vue-tsc"
  },
  "devDependencies": {
    "@nuxt/devtools": "^0.4.5",
    "@nuxtjs/eslint-config-typescript": "^12.0.0",
    "@types/lodash.difference": "^4.5.7",
    "@types/lodash.intersection": "^4.4.7",
    "@types/lodash.merge": "^4.6.7",
    "@types/lodash.once": "^4.1.7",
    "@types/shell-escape": "^0.2.1",
    "@types/uuid": "^9.0.1",
    "eslint": "^8.37.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsdoc": "^44.2.3",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-vue": "^9.10.0",
    "husky": "^8.0.0",
    "lint-staged": "^13.2.2",
    "nuxt": "^3.4.3",
    "prettier": "^2.8.7",
    "ufo": "^1.1.1",
    "vitest": "^0.29.8",
    "vue-tsc": "^1.2.0"
  },
  "dependencies": {
    "@pinia/nuxt": "^0.4.9",
    "fuse.js": "^6.6.2",
    "glob": "^10.1.0",
    "lodash.difference": "^4.5.0",
    "lodash.intersection": "^4.4.0",
    "lodash.merge": "^4.6.2",
    "lodash.once": "^4.1.1",
    "nuxt-security": "^0.13.0",
    "pinia": "^2.0.35",
    "shell-escape": "^0.2.0",
    "uuid": "^9.0.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*": [
      "prettier --write --ignore-unknown ."
    ],
    "*.test.{js,ts}": "vitest run",
    "*.ts": "tsc --noEmit",
    "*.{js,ts}": "eslint --fix",
    "*.{ts,vue}": "vue-tsc"
  },
  "overrides": {
    "vue": "^3.2.47"
  }
}
